@model StudentManager.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Add new Student</h1>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Create">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MemberSince" class="control-label"></label>
                <input asp-for="MemberSince" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrentlyStudying" /> @Html.DisplayNameFor(model => model.CurrentlyStudying)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
            </div>
            <div>
                <label asp-for="Allergies" class="control-label"></label>
            </div>
            @await Html.PartialAsync("_AllergyFormPartial", Model)
            <hr />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
